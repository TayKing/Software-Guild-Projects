@model GuildCars.UI.Models.InventoryViewModel
@{
    ViewBag.Title = "Inventory";
}
<h2>Inventory</h2>
<p>New Vehicles</p>
<table class="table table-striped table-sm" style="width:auto; border:2px solid black">
    <thead class="thead-dark">
        <tr>
            <th scope="col"><strong>VehicleYear</strong></th>
            <th scope="col" style="border-left:2px solid black"><strong>Make</strong></th>
            <th scope="col" style="border-left:2px solid black"><strong>Model</strong></th>
            <th scope="col" style="border-left:2px solid black"><strong>Count</strong></th>
            <th scope="col" style="border-left:2px solid black">Stock Value</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var report in Model.NewReports)
        {
            <tr>
                <td>@report.VehicleYear</td>
                <td style="border-left:2px solid black">@report.Make</td>
                <td style="border-left:2px solid black">@report.Model</td>
                <td style="border-left:2px solid black">@report.Count</td>
                <td style="border-left:2px solid black">@report.StockValue</td>
            </tr>
        }
    </tbody>
</table>
<p>Used Vehicles</p>
<table class="table table-striped table-sm" style="width:auto; border:2px solid black">
    <thead class="thead-dark">
        <tr>
            <th scope="col"><strong>VehicleYear</strong></th>
            <th scope="col" style="border-left:2px solid black"><strong>Make</strong></th>
            <th scope="col" style="border-left:2px solid black"><strong>Model</strong></th>
            <th scope="col" style="border-left:2px solid black"><strong>Count</strong></th>
            <th scope="col" style="border-left:2px solid black">Stock Value</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var report in Model.UsedReports)
        {
            <tr>
                <td>@report.VehicleYear</td>
                <td style="border-left:2px solid black">@report.Make</td>
                <td style="border-left:2px solid black">@report.Model</td>
                <td style="border-left:2px solid black">@report.Count</td>
                <td style="border-left:2px solid black">@report.StockValue</td>
            </tr>
        }
    </tbody>
</table>
